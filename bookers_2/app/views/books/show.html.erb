<main>
 <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  <%= render "users/list", user:@user,book:@book %>
   
 <h1>Book detail</h1>
  <tbody>
      <p><%= attachment_image_tag @user,:profile_image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg" %></p>
      <p><%= @book.title %></p>
      <p><%= @book.body %></p>
      <p><%= link_to "Edit",edit_book_path, class: "btn btn-sm btn-success" %></p>
      <p><%= link_to "destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete %></p>
  </tbody>
</main>