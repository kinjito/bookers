<link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
<h2>User info</h2>

<%= form_with model: @user, local:true do |f| %>
  
            <div class="form-group">
                  <label for="user_name">Name</label>
                    <%= f.text_field :name ,class: "form-control name"%>
                  <!--<input class="form-control name" type="text"name="user[name]" id="user_name">-->
            </div>
              
           <div class="form-group">
                <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", class: "form-control-file user_image"%>
            <label for="user_image">Image</label>
                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
           </div>
      <!--<input value="{}" type="hidden" name="user[profile_image]"><input class="form-control-file user_image" data-reference= include_hidden="false" type="file" name="user[profile_image]" id="user_profile_image">-->
          

          <div class="form-group">
                <label for="user_introduction">Introduction</label>
                 <%= f.text_area :introduction, class: "form-control introduction"%>
                <!--<textarea class="form-control introduction" name="user[introduction]" id="user_introduction"></textarea>-->
          </div>

          <div class="form-group">
               <%= f.submit 'Update Book',class: "btn btn-secondary"%>
            <!--<input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">-->
          </div>
<% end %>




















