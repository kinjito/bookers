<main>
  <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  <h2>User info</h2>
  <%= form_with model: @user, local:true do |f| %>

      <div class="form-group">
        <label for="user_name">Name</label>
         <P><%= f.text_field :name ,class: "form-control name"%></P>
      </div>

      <div class="form-group">
         <label for="user_image">Image</label>
         <P><%= f.attachment_field :profile_image, class: "form-control-file user_image"%></P>
        </div>

      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <P><%= f.text_area :introduction, class: "form-control introduction"%></P>
      </div>

      <div class="form-group">
        <P><%= f.submit 'Update Book',class: "btn btn-secondary"%></P>
      </div>

  <% end %>
</main>






















