 <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
 <body>
   <p id="notice"><%= notice %></p>
      <div class="col-md-8 offset-md-1">
         <h2>Users</h2>
         <table class="table">
       <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
         </tr>
       </thead>
       <tbody> 
         <tr>
           <% @users.each do |user| %>
               <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", class:"mt-3 rounded-circle"%></td>
               <td><%= user.name %></td>
               <td><%= link_to 'Show',user_path(current_user)%></td>
            <% end %>
         </tr>
        </tbody>
       </table>
    <main> 
       <div>
         <%= render "users/list", user:@user,book:@book %>
       </div> 
    </main>
 </body>