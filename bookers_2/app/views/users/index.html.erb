    <thead>
         <tr></tr>
         <h2>Users</h2>
         <table class='table'>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
         </table>
    </thead>
    
        <tbody> 
          <% @users.each do |user| %>
          <table class='table'>
             <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", class:"mt-3 rounded-circle"%>
             <%= user.name %>
             <%= link_to 'Show',user_path(current_user)%>
          <% end %>
          </table>
         </tbody>
    <main> 
       <div>
         <%= render "users/list", user:@user,book:@book %>
       </div> 
    </main>
 </body>